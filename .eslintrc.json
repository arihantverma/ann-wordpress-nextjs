{
  "extends": ["./node_modules/kcd-scripts/eslint.js", "next", "next/core-web-vitals"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/no-unescaped-entities": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@/components", "./components"],
          ["@/utils", "./lib/utils"],
          ["@/images", "./assets/images"],
          ["@/styles", "./styles"],
          ["@/hooks", "./lib/hooks"]
        ],
        "extensions": [".js", ".jsx", ".mdx"]
      },
      "node": {
        "extensions": [
          ".js",
          ".jsx"
        ]
      } 
    }
  }
}